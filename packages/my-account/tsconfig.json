{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vitest/globals"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "#data/*": ["src/data/*"],
      "#styles/*": ["src/styles/*"],
      "#pages/*": ["src/pages/*"],
      "#components/*": ["src/components/*"],
      "#hooks/*": ["src/hooks/*"],
      "#providers/*": ["src/providers/*"],
      "#assets/*": ["src/assets/*"],
      "#utils/*": ["src/utils/*"],
      "#types/*": ["src/types/*"],
      "#specs/*": ["specs/*"]
    },
    "incremental": true
  },
  "include": ["env.d.ts", "**/*.ts", "**/*.tsx", "**/*.js", ".eslintrc.cjs"],
  "exclude": ["node_modules", "public", "playwright.config.*"]
}
